{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowImportingTsExtensions": true
  },
  "include": [
    "next-env.d.ts",
    "src/App.tsx",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/main.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "src/__tests__",
    "**/*.test.*",
    "**/*.spec.*",
    "tests",
    "app/**",
    "src/components/**",
    "src/features/**",
    "src/features/addons/**",
    "src/components/admin/**",
    "src/components/casino/**",
    "src/components/InstagramMessaging.tsx",
    "src/components/InstagramNavbar.tsx",
    "src/components/InviteRedemption.tsx",
    "src/components/LinkTracker.tsx",
    "src/components/AIContentGenerator.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}