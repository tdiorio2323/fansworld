{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "app/*": [
        "./app/*"
      ]
    },
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true,
    "strictNullChecks": false,
    "types": [
      "vitest/globals"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/*.ts",
    "components/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "mocks/**/*.ts",
    "mocks/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "api/**/*",
    "src/**/*",
    "components/**/*.test.ts",
    "components/**/*.test.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
